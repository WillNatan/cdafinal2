{% extends 'admin.html.twig' %}

{% block body %}

    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-icon card-header-rose">
                <div class="card-icon">
                    <i class="material-icons">assignment</i>
                </div>
                <h4 class="card-title ">Slides</h4>
            </div>
            <div class="card-body">
                <a href="{{ path('image_slide_new') }}"><button class="btn btn-success"><i class="fa fa-plus"></i></button></a>
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">
                        <tr>
                            <th>Image</th>
                            <th>Alternative</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for image_slide in image_slides %}
                            <tr>
                                <td><img src="{{ asset('slides/'~image_slide.imageUrl) }}" alt="{{ image_slide.alternative }}" width="80" height="80" class="img-fluid"></td>
                                <td>{{ image_slide.alternative }}</td>
                                <td>
                                    <div class="d-flex justify-content-center">
                                        <a href="{{ path('image_slide_show', {'alternative': image_slide.alternative}) }}"><button class="btn btn-primary"><i class="fa fa-eye"></i></button></a>
                                        <a href="{{ path('image_slide_edit', {'alternative': image_slide.alternative}) }}"><button class="btn btn-warning"><i class="fa fa-edit"></i></button></a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
