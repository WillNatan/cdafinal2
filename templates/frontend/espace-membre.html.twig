{% extends 'base.html.twig' %}

{% block body %}

    <div id="content" class="container">

        <section id="espace_membre" class="row padding">
            <h2 class="titre_rubrique text-xs-center">ESPACE MEMBRE</h2>

            <div id="box_connexion" class="col-md-6 col-sm-12 col-xs-12 flexbox-column">
                <img src="{{ asset('images/icon_connection_noir.png') }}"/>
                <p class="text-uppercase font-weight-bold text-xs-center">déjà membre ?</p>

                <form id="formulaire_contact-section" class="col-md-12 col-xs-12" action="{{ path('login') }}" method="POST">
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <input type="text" class="form-control" placeholder="Votre pseudo" name="_username">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <input type="password" class="form-control" placeholder="Votre mot de passe" name="_password">
                        </div>
                    </div>

                    <button type="submit" id="sendbuton" class="btn btn-secondary">ENVOYEZ</button>
                </form>
            </div>

            <div id="box_inscription" class="col-md-6 col-sm-12 col-xs-12 flexbox-column">
                <img src="{{ asset('images/icon_inscription_noir.png') }}"/>
                <p class="text-uppercase font-weight-bold text-xs-center">nouveau membre ?</p>
                <p class="font-weight-bold text-xs-center">Inscrivez-vous !</p>

                {{ include('user/front/_form.html.twig') }}
            </div>

        </section>


    </div>

{% endblock %}